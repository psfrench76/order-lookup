<%= link_to(order.id, order) %>: <%= order.orderdate %><br><br>
<% if order.customer %>
	<%= link_to(order.customer) do %>
      		Customer: <%= order.customer.firstname %> <%= order.customer.lastname %>
	<% end %>
<% end %>
<br><br>
<% order.orderdetails.each do |opt| %>
	<%= render partial: "/orders/order_detail", object: opt %>
<% end %>	
